{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
<h1>Vos Projets</h1>

<p>{{project.description}}</p>
<p>{{project.openingDate | date('d/m/Y')}}</p>
<p>{{project.deadline | date('d/m/Y')}}</p>
<p>{{project.active?"Terminé":"En cours" }}</p>

<h1>Vos Tâches</h1>

{% for task in project.task %}
  <p>{{task.label}}</p>
  <p>{{task.registered | date('d/m/Y')}}</p>
  <p>{{task.content}}</p>
  <p>{{task.deadline | date('d/m/Y')}}</p>
  <p>{{task.active?"Terminé":"En cours" }}</p>
  {% if app.user == task.project.user %}
    <a class="btn btn-success" href="{{ path('app_updateTask', {id: task.id}) }}">Modifier une tâche</a>
    <a href="{{ path('app_deleteTask', {id: task.id}) }}" class="btn btn-danger">Supprimer la tâche</a>
  {% endif %}
{% endfor %}

{% if app.user == project.user %}
  <a class="btn btn-primary" href="{{ path('app_newTask', {projectId: project.id}) }}">Créer une nouvelle tâche</a>
{% endif %}

{% endblock %}